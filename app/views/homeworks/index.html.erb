<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Materias", assignatures_path%></li>
    <li class="breadcrumb-item"><%= link_to  @assignature.name, assignature_path(@assignature.id)%></li>
    <li class="breadcrumb-item active" aria-current="page">Tareas</li>
  </ol>
</nav>
<div class="container">
  <div class = "main-container_home">
    <h2 class="card-title d-flex justify-content-between"> Listado <%= @assignature.name  %>   <%= link_to "Volver a la Materia", assignatures_path(@assignature.id), class:"btn btn-success mt-4"%></h2> 
    <div class="cards_home">
      <div class="main-container_home assigment">
        <div class="card-title d-flex d-flex justify-content-start align-items-left">
          <i class="fas fa-file-signature"></i>
          <h4> <strong>  Homeworks </strong>  </h4>
        </div>
        <% if @assignature_homeworks.empty? %>
           <p> No tenes homeworks!!! üòÅ </p>
        <% else %>
          <% @assignature_homeworks.each do |lesson , homework| %>
            <h3> <%= lesson.name%>  </h3>
            <hr>
            <%aprobados = 0 %>
            <%corregir = 0 %>
            <%enviados = 0 %>
            <%pendientes = 0 %>
            <% homework.each do |home| %> 

              <%= link_to  homework_path(home.id) ,class:"text-decoration-none text-dark"   do %>   
                  <% if home.user_homeworks.first.status == 'aprobado' %>
                    <%aprobados = aprobados + 1 %>
                  <% elsif   home.user_homeworks.first.status == 'corregir' %>
                    <%corregir = corregir + 1 %>
                  <% elsif   home.user_homeworks.first.status == 'enviados' %>
                    <%enviados = enviados + 1 %>
                  <% else  %>
                    <%pendientes = pendientes + 1 %>
                  <% end %>  
              <% end %>
            <% end %>
            <div class="d-flex align-items-start justify-content-between" id="h_homework">
              <%#= line_chart User.group_by_day(:created_at).count %>
              <p> Aprobados: <%= aprobados%> </p>
              <p> Corregir: <%= corregir%> </p>
              <p> Enviados: <%= enviados%> </p>
              <p> Pendientes: <%= pendientes%> </p>
              <div class="progress" style="width: 274px; border-radius: 8px;">
                <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="main-container_home assigment">
        <div class="card-title d-flex d-flex justify-content-start align-items-left">
          <i class="fa fa-arrow-circle-right" aria-hidden="true"></i>
          <h3> <strong>  Flashcards  </strong>  </h3>
        </div>
        <% if @assignature_flashcards.empty? %>
          <p> No tenes Flashcards!!! üòÅ </p>
        <% else %>
          <% @assignature_flashcards.each do |lesson , homework| %>
            <h4>  <%=  lesson.name%>  </h4>
            <hr>
            <% homework.each do |home| %> 
              <%= link_to  homework_path(home.id) ,class:"text-decoration-none text-dark"   do %>
                <div class="d-flex align-items-start justify-content-between" id="h_flashcard">
                  <p><%= home.name %></p>
                  <i class="fa fa-arrow-circle-right"></i>
                </div>
              <% end %>
            <% end %>
          <% end %>
        <% end %>  
      </div>
    </div>    
  </div>
</div>




