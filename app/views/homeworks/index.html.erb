<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Materias", assignatures_path%></li>
    <li class="breadcrumb-item"><%= link_to  @assignature.name, assignature_path(@assignature.id)%></li>
    <li class="breadcrumb-item active" aria-current="page">Tareas Pendientes</li>
  </ol>
</nav>
<div class="container ">
  <h2 class="d-flex align-items-center justify-content-between"> Listado <%= @assignature.name  %> </h2> 
  <div class="cards_home">
    <!--Home-->
    <div class="main-container_home assigment">
      <div class="card-title d-flex d-flex justify-content-between align-items-left">
        <h4> <strong>  Homeworks </strong>  </h4>
        <i class="fas fa-file-signature"></i>
      </div>
      <% if @assignature_homeworks.empty? %>
          <p> No tenes homeworks!!! üòÅ </p>
      <% else %>
        <% @assignature_homeworks.each do |lesson , homework| %>
          <h3> <%= lesson.name%>  </h3>
          <hr>
          <% homework.each do |home| %> 
            <%= link_to  homework_path(home.id) ,class:"text-decoration-none text-dark" do%>
            <div class="d-flex justify-content-between align-items-center py-0 my-4" id="h_homework">
                <% if home.user_homeworks.first.status == 'corregir' || home.user_homeworks.first.status == 'pendiente' %>
                  <p><%= home.name %></p>
                  <i class="fas fa-pencil-alt mb-0"></i>
                <% end %>  
              </div>  
            <% end %>
            <%#= line_chart User.group_by_day(:created_at).count %>
          <% end %>
        <% end %>
      <% end %>    
    </div>
    <!--Flashcards-->
    <div class="main-container_home assigment">
      <div class="card-title d-flex d-flex justify-content-between align-items-left">
        <h3> <strong>  Flashcards  </strong>  </h3>
        <i class="fa fa-arrow-circle-right" aria-hidden="true"></i>
      </div>
      <% if @assignature_flashcards.empty? %>
        <p> No tenes Flashcards!!! üòÅ </p>
      <% else %>
        <% @assignature_flashcards.each do |lesson , homework| %>
          <h3>  <%=  lesson.name%>  </h3>
          <hr>
          <% homework.each do |home| %> 
            <%= link_to  homework_path(home.id) ,class:"text-decoration-none text-dark"   do %>
              <div class="d-flex align-items-center justify-content-between  py-0 my-4 style= "height: 55px;"  id="h_flashcard">
                <% if home.user_homeworks.first.status == 'corregir' || home.user_homeworks.first.status == 'pendiente' %>
                  <p><%= home.name %></p>
                  <i class="fas fa-pencil-alt mb-0"></i>
                <% end %>  
              </div>  
            <% end %>
          <% end %>
        <% end %>
      <% end %>  
    </div>
  </div>    
</div>






