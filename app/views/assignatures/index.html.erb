    <div class="col-12 col-md-8">
      <div>
        <h3>Proximos Eventos</h3>
        <div class="evento">                      
          <% current_user.courses.first.events.where('date > ?',(DateTime.now - 1.day)).order(:date).first(4).each do |event| %>
            <div class="ev-card d-flex">
              <div>
                <span class="date-assig"><%= event.eventable_id %> <%= event.eventable_type %></span>
                <span class="date-day"><%= event.date.strftime("%d/%m/%Y") %></span>              
              </div>
              <div>
                <div class="date"><%= ((event.date - DateTime.now)/86400).round() %></div>
                <span class="ml-2">dias</span>              
              </div>                       
            </div>
          <% end %>          
        </div>  
      </div>
      <div>
        <h3>Materias</h3>
        <div class="car">
            <% if current_user.role == "student" %>
              <% @assignatures.first(6).each do |assignature| %>
                <%= link_to assignature_path(assignature), class:"car-assignature text-decoration-none text-dark d-flex" do %>           
                  <div class="letra mr-4"><%= assignature.name.first  %></div>
                  <div class="core">
                    <h3><%= assignature.name %></h3>
                    <p>Docente: <%= assignature.teacher.last_name %></p>
                    <progress id="bar" value="<%= assignature.user_homework_completion_rate %>" max="100"  data-toggle="tooltip" data-placement="bottom" title="<%= number_to_percentage(assignature.user_homework_completion_rate, precision: 2) %> de tareas completadas "></progress>
                    </div>
                  <i class="fa fa-ellipsis-v"></i>                  
                <% end %>
              <% end %>
            <% else %>
              <% @assignatures.first(6).each do |assignature| %>
                <%= link_to assignature_path(assignature), class:"car-assignature text-decoration-none text-dark" do %>
                  <h3><%= assignature.name %></h3>
                <% end %>
              <% end %>
            <% end %>               
