<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Materias", assignatures_path%></li>
    <li class="breadcrumb-item active" aria-current="page"> <%=@assignature.name %></li>
  </ol>
</nav>
<h2><%= @assignature.name %></h2>
<div class="main">
  <div class="cards">
    <div class="main-container assigment position-relative ">
      <i class="fas fa-bookmark"></i>
      <h3>Proximas Clases</h3>
      <hr>
      <div>
        <% @lessons.first(4).each do |lesson| %>
          <%=link_to lesson_path(lesson), class:"text-decoration-none text-dark" do%>
            <div class="d-flex justify-content-between align-items-center py-2 my-2 borde" id="lesson">
              <p><%= lesson.name %></p>
              <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
            </div>
          <%end %>
        <%end%>
      </div>
      <p class="p-bottom d-flex align-items-end justify-content-between position-absolute fixed-bottom">  <%= link_to "Ver toda las clases",  assignature_lessons_path(@assignature), class:"btn btn-outline-success btn-sm btn-block"%></p> 
    </div>
    <div class="main-container assigment position-relative">
      <i class="far fa-file-alt"></i>
      <h3>Pendientes</h3>
      <hr>
      <div>
        <% @assignature.homeworks.first(4).each do |homework| %>
          <%=link_to homework_path(homework),class:"text-decoration-none text-dark" do%>
            <% if homework.user_homeworks.first.status == 'corregir' || homework.user_homeworks.first.status == 'pendiente' %>
              <div class="d-flex justify-content-between align-items-center py-2 my-2 borde" id="homework">
                <p><%= homework.name %></p>
                <i class="fa fa-pencil-alt" aria-hidden="true"></i>
              </div>
            <%end %> 
          <%end %>
        <%end%>
      </div>
      <p class="p-bottom d-flex align-items-end justify-content-between position-absolute fixed-bottom">  <%= link_to "Ver mas tareas pendientes", assignature_homeworks_path(@assignature), class:"btn btn-outline-success btn-sm btn-block"%></p> 
    </div>
    <div class="main-container assigment position-relative">
      <i class="fas fa-link"></i>
      <h3>Links Importantes</h3>
      <hr>
      <div>
        <% @lessons.first(4).each do |lesson| %>
          <%=link_to "#{lesson.link}",target: :_blank, class:"text-decoration-none text-dark" do%>
            <div class="d-flex justify-content-between align-items-center py-2 my-2 borde" style= "height: 36px;" id="link">
              <p><%= lesson.name %></p>
            <i class="far fa-lightbulb"></i>
            </div>
          <%end %>
        <%end %>
      </div>
    </div> 
  </div>
</div>
