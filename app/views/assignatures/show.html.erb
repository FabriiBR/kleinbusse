<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Materias", assignatures_path%></li>
    <li class="breadcrumb-item active" aria-current="page"> <%=@assignature.name %></li>
  </ol>
</nav>
<div class="main-container">
  <h2><%= @assignature.name %></h2>
  <div class="cards">
    <div class="main-container assigment">
      <i class="fas fa-bookmark"></i>
      <h3>Proximas Clases</h3>
      <hr>
      <div>
        <% @lessons.first(4).each do |lesson| %>
          <%=link_to lesson_path(lesson), class:"text-decoration-none text-dark" do%>
            <div class="d-flex justify-content-between align-items-center my-2 borde" id="lesson">
              <p><%= lesson.name %></p>
              <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
            </div>
          <%end %>
        <%end%>
        <%=link_to "Ver mas", assignature_lessons_path(@assignature) %>
      </div>
    </div>
    <div class="main-container assigment">
      <i class="far fa-file-alt"></i>
      <h3>Pendientes</h3>
      <div>
        <hr>
        <% @assignature.homeworks.first(4).each do |homework| %>
          <%=link_to homework_path(homework), class:"text-decoration-none text-dark" do%>
            <div class="d-flex justify-content-between align-items-center my-2 borde" id="homework">
              <% if homework.user_homeworks.first.status == 'corregir' || homework.user_homeworks.first.status == 'pendiente' %>
                <p><%= homework.name %></p>
                <i class="fas fa-pencil-alt"></i>
              <%end %> 
            </div>
          <%end %>
        <%end%>
        <%=link_to "Ver mas", assignature_homeworks_path(@assignature) %>
      </div>
    </div>
    <div class="main-container assigment">
      <i class="fas fa-link"></i>
      <h3>Links Importantes</h3>
      <hr>
      <div>
        <% @lessons.first(4).each do |lesson| %>
            <%=link_to "#{lesson.link}",target: :_blank, class:"text-decoration-none text-dark" do%>
              <div class="d-flex justify-content-between align-items-center my-2 borde" id="link">
                <p><%= lesson.name %></p>
              <i class="far fa-lightbulb"></i>
              </div>
            <%end %>
        <%end%>
      </div>
    </div> 
  </div>
  <%= link_to "Volver", assignatures_path, class:"btn btn-success mt-4" %>
</div>
