<div class="main-container">
  <h2><%= @assignature.name %></h2>
  <div class="cards">
    <div class="main-container assigment">
      <i class="fas fa-bookmark"></i>
      <h3>Proximas Clases</h3>
          <div>
            <% @lessons.each do |lesson| %>
                <%=link_to lesson_path(lesson.id), class:"text-decoration-none text-dark" do%>
                  <div class="d-flex justify-content-between align-items-center my-4">
                    <p><%= lesson.name %></p>
                    <i class="fas fa-ellipsis-v"></i>
                  </div>
                <%end %>
            <%end%>
          </div>
    </div>
    <div class="main-container assigment">
      <i class="far fa-file-alt"></i>
      <h3>Tareas Pendientes</h3>
      <div>
            <% @lessons.each do |lesson| %>
                <%=link_to lesson_path(lesson.id), class:"text-decoration-none text-dark" do%>
                  <div class="d-flex justify-content-between align-items-center my-4">
                    <p><%= lesson.name %></p>
                    <i class="fas fa-pen"></i></i>
                  </div>
                <%end %>
            <%end%>
          </div>
    </div>
    <div class="main-container assigment">
      <i class="fas fa-link"></i>
      <h3>Links Importantes</h3>
      <div>
            <% @lessons.each do |lesson| %>
                <%=link_to lesson_path(lesson.id), class:"text-decoration-none text-dark" do%>
                  <div class="d-flex justify-content-between align-items-center my-4">
                    <p><%= lesson.name %></p>
                  <i class="far fa-lightbulb"></i>
                  </div>
                <%end %>
            <%end%>
          </div>
    </div>  
  </div>

<%= link_to "Volver", assignatures_path, class:"btn btn-success mt-4" %>
</div>

