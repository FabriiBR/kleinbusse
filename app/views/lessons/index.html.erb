<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Todas las Materias", assignatures_path%></li>
    <li class="breadcrumb-item"><%= link_to @assignature.name , assignature_path(@assignature.id)%></li>
    <li class="breadcrumb-item active" aria-current="page"> Proximas Clases </li>
  </ol>
</nav>
<div class="container">
  <h2 class= "ml-3"><%= @assignature.name %></h2>
  <div class="">
    <p class= "ml-3">Docente: <%= @assignature.teacher.first_name %> <%= @assignature.teacher.last_name %></p>
    <div class="mt-3">
      <div class="main-container assigment">
        <i class="fas fa-bookmark"></i>
        <h3>Proximas Clases</h3>
        <div>
          <% @lessons.each do |lesson| %>
              <hr>
              <%=link_to lesson_path(lesson.id), class:"text-decoration-none text-dark" do%>
                <div class="d-flex justify-content-between align-items-center my-2 borde" id="lesson">
                  <p><%= lesson.name %></p>
                  <i class="fas fa-ellipsis-v"></i>
                </div>
              <%end %>
          <%end%>
        </div>
      </div>
    </div>
  </div> 
</div>

