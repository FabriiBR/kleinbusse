<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Todas las Materias", assignatures_path%></li>
    <li class="breadcrumb-item"><%= link_to  @lesson.assignature.name, assignature_path(@lesson.id)%></li>
    <li class="breadcrumb-item active" aria-current="page"> Leccion </li>
  </ol>
</nav>

<div class= "container">
  <div class="row">
    <div class="col-12 justify-content-between">
      <div class= ' card video-card px-2'>
        <div class="tabs-underlined nav nav-tabs d-flex justify-content-end" id="nav-tab" role="tablist">
          <h2 style="position:absolute;left:2%;"><%=  @lesson.name %></h2>
          <a class="tab-underlined active" id="nav-clase-tab" data-toggle="tab" href="#nav-clase" role="tab" aria-controls="nav-clase" aria-selected="true"><i class="fa  fa-book" aria-hidden="true"></i>  Clase</a>
          <a class="tab-underlined" id="nav-profile-tab" data-toggle="tab" href="#nav-video" role="tab" aria-controls="nav-video" aria-selected="false"><i class="fa fa-play" aria-hidden="true"></i>  Video</a>
        </div>
        <div class="tab-content" style="height: 45vh;" id="nav-tabContent">
          <div class="tab-pane fade show active pt-2" style="height: 45vh;" id="nav-clase" role="tabpanel" aria-labelledby="nav-clase-tab">
            <iframe width="100%" height="100%" src=<%="#{@lesson.lecure }"%> frameborder="0" scrolling="no" style="border:1px solid #CCC; border-width:1px;" allowfullscreen> </iframe>
          </div>
          <div class="tab-pane fade pt-2" style="height: 45vh;" id="nav-video" role="tabpanel" aria-labelledby="nav-video-tab">
            <iframe width="100%" height="100%" src=<%="#{@lesson.video }"%> frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br><%# --------------------------------------------------------bottom d-flex justify-content-between mt-5 %>
  
  <div class="row justify-content-between px-3">
    <div class="col-md-12 col-lg-5 main-container_lessons mt-1">
      <div class="d-flex align-items-center">
        <i class="fas fa-bookmark p-2"></i>
        <h2 class= 'p-2'>Clases</h2>
      </div>
      <% @lessons.each do |lesson| %> 
        <hr style= "margin-top: 0.6rem; margin-bottom: 0.4rem">
        <%= link_to lesson_path(lesson.id),class:"text-decoration-none text-dark"    do %>
          <div class="d-flex align-items-center justify-content-between borde " style= "height: 36px;" id="lesson">
            <p><%= lesson.name %></p>
            <i class="fas fa-ellipsis-v"></i>
          </div>
        <% end %>
      <% end %>
      <p class="mt-2">  <%= link_to "Ver mas clases",  assignature_lessons_path(@lesson.assignature_id), class:"btn btn-outline-success btn-sm btn-block"%></p> 
    </div>
    <div class="col-lg-5 col-md-12 main-container_lessons mt-1">
      <div class="d-flex ">
        <i class=" far fa-file-alt p-2"></i>
        <h2 class="p-2">Tareas</h2>
      </div>      
      <% @lesson_homeworks.each do |hw| %> 
        <hr style= "margin-top: 0.6rem; margin-bottom: 0.4rem">
        <%= link_to homework_path(hw.id),class:"text-decoration-none text-dark"   do %>
          <div class="d-flex align-items-center justify-content-between borde" style= "height: 36px;" id="homework">
            <%# if hw.user_homeworks.first.status == 'corregir' || hw.user_homeworks.first.status == 'pendiente' %>
              <p><%= hw.name %></p>
              <i class="fas fa-pencil-alt"></i>
            <%# end %>  
          </div>
        <% end %>
      <% end %>
      <p class="mt-2">  <%= link_to "Ver mas tareas pendientes", assignature_homeworks_path(@lesson.assignature_id), class:"btn btn-outline-success btn-sm btn-block"%></p> 
    </div>
  </div>
</div>


