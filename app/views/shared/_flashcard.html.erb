<div class="wrapper">
  <div class="card">
    <input type="checkbox" id="card1" class="more" aria-hidden="true">
    <div class="content">
      <%= simple_form_for([@homework, @user_homework]) do |f| %> 
      <div class="front" style="background-image: url(<%= cl_image_path 'https://res.cloudinary.com/julianoviedo1/image/upload/v1597072316/flashcard_background.jpg' %>)">
        <div class="inner">
          <div class="contenido">
            <h2><%= @homework.name%></h2>
            <h3><%= @homework.content%></h3>
          </div>
          <%= f.input :user_answer, as: :text, label: false, input_html: { id: 'userAnswer' }%>
          <label for="card1" class="button" id="button_to_answer" aria-hidden="true">
            Ver Respuesta
          </label>
        </div>
      </div>
      <div class="back container-fluid">
        <div class="d-flex justify-content-between p-2 mt-2">
          <div class="location">
            Flashcard
            <%# <i class="fa fa-bolt" style="color:grey; font-size:20px;" aria-hidden="true"></i> %>
          </div>
          <div class="favorite">
            <i class="fas fa-star"></i>
          </div>
        </div>
        <div class="">
          <div class="m-2">
            <h5 class="mx-3 mb-3" >Respuesta Correcta: </h5>
            <p class="mx-3 mb-3"><%= @homework.answer%></p>
          </div>
          <div class="m-2">
            <h5 class="mx-3 mb-3">Tu respuesta: </h5>
            <p class="mx-3 mb-3" id= "hidden_answer"></p>
          </div>
        </div>
        <div class="d-flex endbuttons m-3">
          <label for="card1" class="button return mx-2" aria-hidden="true">
            <i class="fas fa-arrow-left"></i>
          </label>
          <%= f.submit :Guardar, class:'button return' do%>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
