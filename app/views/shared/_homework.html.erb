<h1 class="d-flex justify-content-between my-3"> Tareas Pendientes </h1>
<div class = "main-container_home my-3">
  <%# main-container assigment %>
  <div class="container info">
    <h2> <%=@homework.name%> </h2>
    <h3> Descripcion del ejercicio: <%= @homework.content%></h3> 
  </div>
  <div class="container my-5">
    <h4 class="my-4" style="font-size:18px;"> Adjunta la respuesta aqui: </h4> 
    <%= simple_form_for([@homework, @user_homework]) do |f| %>
      <%= f.input :file, as: :file, label: false %>
      <%= f.submit :'Subir Tarea', class:'btn btn-success m-1', data: {confirm: 'Confirmar cambios'}%>
      <%=link_to 'Tengo una duda!', new_lesson_ticket_path(@homework.lesson_id), class: 'btn btn-success my-4'%>
    <% end %>
    <%if @user_homework.file.attached?%>
      <p> Felicitaciones, subiste un archivo!</p>
    <% end %>
  </div>
</div>
